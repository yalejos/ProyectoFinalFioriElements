<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="_IDGenDialog1" title="{i18n>scheduleAppointment}" contentWidth="400px" class="sapUiContentPadding">
        <content>
            <f:SimpleForm id="_IDGenSimpleForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="12" labelSpanM="12" labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanL="0" emptySpanM="0" emptySpanS="0"
                columnsL="1" columnsM="1"  singleContainerFullSize="false">
                <f:content>
                    
                    <Label id="_IDGenLabel" text="{i18n>therapist}" required="true" />
                    <Input id="inputTherapist" 
                           showValueHelp="true" 
                           valueHelpRequest=".onValueHelpRequest" 
                           valueHelpIconSrc="sap-icon://copy"/>

                    <Label id="_IDGenLabel1" text="{i18n>typeAppointment}" required="true" />
                    <Input id="inputType" 
                           showValueHelp="true" 
                           valueHelpRequest=".onValueHelpRequest" 
                           valueHelpIconSrc="sap-icon://copy"/>

                    <Label id="_IDGenLabel2" text="{i18n>subject}" required="true" />
                    <Input id="inputSubject" value="{formModel>/title}"/>

                    <Label id="_IDGenLabel3" text="{i18n>description}" />
                    <TextArea id="inputDescription" rows="4" value="{formModel>/description}" />

                    <Label id="_IDGenLabel4" text="{i18n>beginDate}" required="true" />
                    <DatePicker id="inputDate" 
                                placeholder="e.g. Dec 31, 2026" 
                                valueFormat="yyyy-MM-dd"
                                value="{formModel>/beginDate}" 
                                change="onChangeDatePress"/>

                    <Label id="_IDGenLabel9" text="{i18n>endDate}" required="true" />
                     <DatePicker id="endDate" 
                                 valueFormat="yyyy-MM-dd"
                                 value="{formModel>/endDate}" 
                                 enabled="{= ${IsActiveEntity} === false? false: true}"/>
                   
                    <Label id="_IDGenLabel5" text="{i18n>block}" required="true" />
                    <Input id="inputBlock" 
                           showValueHelp="true" 
                           valueHelpRequest=".onValueHelpRequest" 
                           valueHelpIconSrc="sap-icon://copy" />

                    <Label id="_IDGenLabel7" text="{i18n>beginTime}" />
                    <Input id="inputStartTime" 
                           value="{formModel>/beginTime}" 
                           type="Time" 
                           enabled="{= ${IsActiveEntity} === false? false: true}"
                           editable="false" />

                    <Label id="_IDGenLabel8" text="{i18n>endTime}" />
                    <Input id="inputEndtTime"
                           value="{formModel>/endTime}" 
                           type="Time" 
                           enabled="{= ${IsActiveEntity} === false? false: true}"
                           editable="false" />

                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button id="_IDGenButton" text="Schedule appointment" type="Emphasized" press="onSchedulePress" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton1" text="Cancel" press="onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>